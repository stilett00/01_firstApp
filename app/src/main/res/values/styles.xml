<resources>

  <style name="Widget.App.Button.Base" parent="Widget.MaterialComponents.Button.TextButton">
    <item name="android:minWidth">48dp</item>
    <item name="android:minHeight">48dp</item>
    <item name="android:layout_margin">@dimen/common_spacing</item>
  </style>

  <style name="Widget.App.Button.Like" parent="Widget.App.Button.Base">
    <item name="iconTint">@color/color_like_selector</item>
    <item name="android:checkable">true</item>
  </style>

  <style name="Widget.App.Button.Share" parent="Widget.App.Button.Base">
    <item name="iconTint">?android:attr/textColorSecondary</item>
  </style>

  <style name="Widget.App.Button.View" parent="Widget.App.Button.Base">
    <item name="iconTint">?android:attr/textColorSecondary</item>
  </style>

  <style name="Widget.App.Button.Menu" parent="Widget.MaterialComponents.Button.OutlinedButton">
    <item name="android:minWidth">48dp</item>
    <item name="android:minHeight">48dp</item>
  </style>

</resources>